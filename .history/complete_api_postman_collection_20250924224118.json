{
  "info": {
    "name": "Complete Backend API Collection",
    "_postman_id": "complete-backend-api-collection",
    "description": "Complete collection for testing all backend APIs including auth, user management, and contact management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1) Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+1234567890\",\n  \"password\": \"Password123\",\n  \"name\": \"Test User\",\n  \"smsCode\": \"123456\"\n}"
            },
            "description": "Register a new user with phone and password"
          },
          "response": []
        },
        {
          "name": "2) Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data && json.data.tokens) {",
                  "  pm.collectionVariables.set('accessToken', json.data.tokens.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', json.data.tokens.refreshToken);",
                  "  console.log('Tokens saved to collection variables');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+1234567890\",\n  \"password\": \"Password123\"\n}"
            },
            "description": "Login user and get JWT tokens"
          },
          "response": []
        },
        {
          "name": "3) Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "refresh"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "description": "Refresh access token using refresh token"
          },
          "response": []
        },
        {
          "name": "4) Logout User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "logout"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "description": "Logout user and invalidate refresh token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "1) Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            },
            "description": "Get current user information"
          },
          "response": []
        },
        {
          "name": "2) Update User Info",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"description\": \"Updated user description\"\n}"
            },
            "description": "Update current user information"
          },
          "response": []
        },
        {
          "name": "3) Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me/password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me", "password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"Password123\",\n  \"newPassword\": \"NewPassword123\"\n}"
            },
            "description": "Change user password"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Contact Management",
      "item": [
        {
          "name": "1) Create Contact",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data && json.data.id) {",
                  "  pm.collectionVariables.set('contactId', json.data.id);",
                  "  console.log('Contact ID saved:', json.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三\",\n  \"description\": \"工作伙伴，喜欢喝咖啡，下周三在上海\"\n}"
            },
            "description": "Create a new contact"
          },
          "response": []
        },
        {
          "name": "2) Get All Contacts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts"]
            },
            "description": "Get all contacts for current user"
          },
          "response": []
        },
        {
          "name": "3) Get Contact by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts/{{contactId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts", "{{contactId}}"]
            },
            "description": "Get specific contact by ID"
          },
          "response": []
        },
        {
          "name": "4) Update Contact",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts/{{contactId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts", "{{contactId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三 (更新)\",\n  \"description\": \"更新后的描述：工作伙伴，喜欢喝咖啡和茶，下周三在上海，考虑合作播客\"\n}"
            },
            "description": "Update specific contact"
          },
          "response": []
        },
        {
          "name": "5) Delete Contact",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts/{{contactId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts", "{{contactId}}"]
            },
            "description": "Delete specific contact (soft delete)"
          },
          "response": []
        },
        {
          "name": "6) Preview Aibook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/contacts/{{contactId}}/aibook:preview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contacts", "{{contactId}}", "aibook:preview"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contactDescriptionOverride\": null,\n  \"userDescriptionOverride\": null,\n  \"language\": \"zh\"\n}"
            },
            "description": "Generate AI-powered relationship insights (aibook) for a contact"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "contactId",
      "value": "",
      "type": "string"
    }
  ]
}
